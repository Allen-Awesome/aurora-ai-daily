# DeepSeek API配置
# 请在本地 .env 中填写真实 key，不要在仓库中泄露
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 数据库配置
DATABASE_URL=sqlite:///news_system.db

# Redis配置（用于缓存）
REDIS_URL=redis://localhost:6379

# 系统配置
DEBUG=False
LOG_LEVEL=INFO
LOG_JSON=false
LOG_FILE=news_system.log
LOG_MAX_BYTES=1048576
LOG_BACKUP_COUNT=5

# 爬虫配置
CRAWL_DELAY=1
MAX_ARTICLES_PER_SOURCE=10
MAX_DAILY_SUMMARIES=20

# 卡片生成配置
CARD_WIDTH=800
CARD_HEIGHT=600
OUTPUT_QUALITY=95

# 推送配置（服务器酱·Turbo）
# https://sct.ftqq.com 获取 SendKey
SERVERCHAN_SENDKEY=your_serverchan_sendkey_here
